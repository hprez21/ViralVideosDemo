<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ViralVideosDemo.Pages.VideoPromptsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ViralVideosDemo.ViewModels"
             x:DataType="viewmodels:VideoPromptsViewModel"
             Title="Video Prompts">

    <!-- Grid to allow overlay -->
    <Grid>
        
        <!-- Main Content -->
        <ScrollView>
            <StackLayout Padding="20" Spacing="15">
            
                <!-- Header Section -->
                <Border BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <StackLayout Padding="20" Spacing="10">
                        <Label Text="Generated Prompts" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="White"/>
                        <Label Text="{Binding VideoIdea}" 
                               FontSize="16" 
                               TextColor="White" 
                               Opacity="0.9"/>
                    </StackLayout>
                </Border>

                <!-- Statistics -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <Border Grid.Column="0" 
                            BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#2A2A2A}"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <StackLayout Padding="15" Spacing="5">
                            <Label Text="{Binding TotalPrompts}" 
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   HorizontalOptions="Center"/>
                            <Label Text="Total Prompts" 
                                   FontSize="12" 
                                   HorizontalOptions="Center" 
                                   Opacity="0.7"/>
                        </StackLayout>
                    </Border>

                    <Border Grid.Column="1" 
                            BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#2A2A2A}"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <StackLayout Padding="15" Spacing="5">
                            <Label Text="{Binding EditedPrompts}" 
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   HorizontalOptions="Center" 
                                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"/>
                            <Label Text="Edited" 
                                   FontSize="12" 
                                   HorizontalOptions="Center" 
                                   Opacity="0.7"/>
                        </StackLayout>
                    </Border>
                </Grid>

                <!-- Prompts List -->
                <CollectionView ItemsSource="{Binding Prompts}" 
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:VideoPrompt">
                            <Border Margin="0,5" 
                                    BackgroundColor="{AppThemeBinding Light=White, Dark=#1A1A1A}"
                                    Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                                    StrokeThickness="1">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>
                                <StackLayout Padding="15" Spacing="10">
                                    
                                    <!-- Header with title and edited indicator -->
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0" 
                                               Text="{Binding Title}" 
                                               FontSize="18" 
                                               FontAttributes="Bold"/>
                                        <Label Grid.Column="1" 
                                               Text="✏️ Edited" 
                                               FontSize="12" 
                                               TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                               IsVisible="{Binding IsEdited}"/>
                                    </Grid>

                                    <!-- Content -->
                                    <Label Text="{Binding Content}" 
                                           FontSize="16" 
                                           LineBreakMode="WordWrap"/>

                                    <!-- Action Buttons -->
                                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10" Margin="0,10,0,0">
                                        <Button Grid.Column="0" 
                                                Text="Edit" 
                                                FontSize="14" 
                                                BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                                TextColor="White"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:VideoPromptsViewModel}}, Path=EditPromptCommand}"
                                                CommandParameter="{Binding .}"/>
                                        
                                        <Button Grid.Column="1" 
                                                Text="🔄 Regenerate" 
                                                FontSize="14" 
                                                BackgroundColor="#FF9500"
                                                TextColor="White"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:VideoPromptsViewModel}}, Path=RegeneratePromptCommand}"
                                                CommandParameter="{Binding .}"/>
                                        
                                        <Button Grid.Column="2" 
                                                Text="🗑️" 
                                                FontSize="14" 
                                                BackgroundColor="#FF3B30"
                                                TextColor="White"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:VideoPromptsViewModel}}, Path=DeletePromptCommand}"
                                                CommandParameter="{Binding .}"/>
                                    </Grid>
                                </StackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Generate Video Button -->
                <Button Text="🎬 Generate Video" 
                        FontSize="18" 
                        FontAttributes="Bold" 
                        HeightRequest="50" 
                        BackgroundColor="{AppThemeBinding Light={StaticResource Success}, Dark={StaticResource Success}}"
                        TextColor="White"
                        Command="{Binding GenerateVideoCommand}"
                        Margin="0,20,0,0"/>

            </StackLayout>
        </ScrollView>

        <!-- FULLSCREEN BLOCKING OVERLAY -->
        <ContentView IsVisible="{Binding IsLoading}" 
                     BackgroundColor="#80000000"
                     InputTransparent="False">
            
            <!-- Centered Loading Content -->
            <StackLayout VerticalOptions="Center" 
                         HorizontalOptions="Center"
                         Spacing="30">
                
                <!-- Loading Animation -->
                <ActivityIndicator IsRunning="{Binding IsLoading}" 
                                   Color="White" 
                                   WidthRequest="80" 
                                   HeightRequest="80"/>
                
                <!-- Loading Card -->
                <Border BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="30"
                        HorizontalOptions="Center">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15"/>
                    </Border.StrokeShape>
                    
                    <StackLayout Spacing="20" 
                                 HorizontalOptions="Center"
                                 WidthRequest="300">
                        
                        <!-- Main Message -->
                        <Label Text="🎬 Generando Video con IA" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center" 
                               TextColor="{StaticResource Primary}"
                               HorizontalTextAlignment="Center"/>
                        
                        <!-- Progress Message -->
                        <Label Text="Tu video viral está siendo creado usando SORA AI. Este proceso puede tomar varios minutos debido a la complejidad de la generación de video." 
                               FontSize="16" 
                               HorizontalOptions="Center" 
                               TextColor="{StaticResource Gray600}"
                               HorizontalTextAlignment="Center"
                               LineBreakMode="WordWrap"/>
                        
                        <!-- Status Message -->
                        <Label Text="🔄 Procesando..." 
                               FontSize="14" 
                               HorizontalOptions="Center" 
                               TextColor="{StaticResource Primary}"
                               FontAttributes="Italic"
                               HorizontalTextAlignment="Center"/>
                               
                        <!-- Warning Message -->
                        <Label Text="⚠️ No cierres la aplicación durante este proceso" 
                               FontSize="12" 
                               HorizontalOptions="Center" 
                               TextColor="#FF9500"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                        
                    </StackLayout>
                </Border>
            </StackLayout>
        </ContentView>

    </Grid>
</ContentPage>
<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ViralVideosDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ViralVideosDemo"
    xmlns:pages="clr-namespace:ViralVideosDemo.Pages"
    Title="ViralVideosDemo"
    FlyoutBehavior="Flyout">

    <FlyoutItem Title="Videos Virales" Icon="video.png">
        <ShellContent
            Title="Nueva Idea"
            ContentTemplate="{DataTemplate pages:AddVideoIdeaPage}"
            Route="AddVideoIdea" />

        <ShellContent
            Title="Prompts Generados"
            ContentTemplate="{DataTemplate pages:VideoPromptsPage}"
            Route="VideoPrompts" />
    </FlyoutItem>

    <FlyoutItem Title="Configuración" Icon="settings.png">
        <ShellContent
            Title="Configuración"
            ContentTemplate="{DataTemplate pages:SettingsPage}"
            Route="Settings" />
    </FlyoutItem>

</Shell>
